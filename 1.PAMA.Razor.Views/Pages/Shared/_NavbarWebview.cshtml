@{
    string linkBack = ViewData["NavbarBackLink"] as string ?? string.Empty;
    string display = string.IsNullOrEmpty(linkBack) ? "none" : "block";
}
<nav class="navbar navbar-expand-lg main-navbar" style="position: fixed; top: 0; background-color: #6777ef; left: 0">
    <form class="form-inline mr-auto">
        <ul class="navbar-nav mr-3">
            <li>
                @if (display == "block")
                {
                    <a href="@linkBack" class="nav-link nav-link-lg">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                }
                else
                {
                    <a href="#" class="nav-link nav-link-lg" id="navbar-back" style="display: none;">
                        <i class="fas fa-arrow-left"></i>
                    </a>
                }
            </li>
            <li>
                <a href="#" class="nav-link nav-link-lg d-sm-none" id="navbar-icon">
                    <i class="fas fa-home"></i>
                </a>
            </li>
        </ul>
    </form>
</nav>