@page "/webview/booking/index"
@model _1.PAMA.Razor.Views.Pages.Webview.BookingOrder.IndexModel
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration

@{
    Layout = "_LayoutWebview";
    ViewData["PageName"] = " Smart Meeting App - List Booking Meeting";
}

<!-- Main Content -->
<div class="main-content">
    <section class="section">
        <!-- meeting list section -->
        <div id="meeting-list-section">
            <div class="section-header">
                <h1>Smart Meeting App</h1>
            </div>


            <!-- Filter tanggal dan status -->
            <div id="filterForm" class="card p-3">
                <div class="form-row align-items-center mb-3">
                    <div class="col-auto">
                        <label for="dateRange">Date:</label>
                        <div class="input-group">
                            <input type="text" id="dateRange" class="form-control" placeholder="Pilih rentang waktu" />
                            <div class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fas fa-calendar-alt"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row align-items-center mb-3">
                    <div class="col-auto">
                        <label for="statusFilter">Status:</label>
                        <select id="statusFilter" class="form-control">
                            <option value="">All</option>
                            <option value="In progress">In progress</option>
                            <option value="Ongoing">Ongoing</option>
                            <option value="Queue">Queue</option>
                            <option value="Expired">Expired</option>
                            <option value="Pending">Pending</option>
                            <option value="Rejected">Rejected</option>
                            <option value="Canceled">Canceled</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- meeting list -->
            <div class="card">
                <div class="card-body">
                    <ul class="list-unstyled list-unstyled-border" id="meeting-list">
                    </ul>
                </div>
            </div>

            <!-- float button -->
            <a href="features-profile.html" class="btn btn-primary btn-lg rounded shadow-lg" style="
                  position: fixed;
                  bottom: 30px;
                  right: 20px;
                  z-index: 1000;
                ">
                <i class="fas fa-plus"></i>
            </a>
        </div>

        <!-- meeting details -->
        <div id="meeting-details-section" style="display: none">
            <div class="card position-relative">
                <button type="button" class="btn btn-danger btn-icon position-absolute" style="top: 10px; right: 10px"
                    id="end-meeting">
                    <i class="fas fa-times"></i>
                </button>
                <div class="card-body">
                    <h5 class="card-title mb-3">Detail Meeting</h5>
                    <div class="section-header-breadcrumb d-flex align-items-center">
                        <div class="breadcrumb-item">Dashboard</div>
                        <div class="breadcrumb-item active">
                            <a href="#">Detail Meeting</a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3" >
                <div class="col-12">
                    <div class="card">
                        <div class="card-body d-flex align-items-center">
                            <img src="../assets/img/example-image-50.jpg" class="rounded-circle mr-3" width="50"
                                height="50" alt="Meeting Icon" />
                            <div>
                                <h6 class="font-weight-bold mb-1" id="meeting-title"></h6>
                                <span id="meeting-status" class="badge p-2"></span>
                                <div class="mt-1 text-muted" id="meeting-date-time"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="card">
                        <div class="card-body d-flex align-items-center">
                            <img src="../assets/img/news/img01.jpg" class="rounded-circle mr-3" width="50" height="50"
                                alt="Host Icon" />
                            <div>
                                <h6 class="font-weight-bold mb-1">Detail Meeting</h6>
                                <p class="text-muted mb-1">
                                    Host: <strong id="meeting-host"></strong>
                                </p>
                                <p class="mb-0" id="meeting-description"></p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container mt-3">
                    <div class="card mb-3">
                        <div class="card-body d-flex align-items-center">
                            <img src="../assets/img/example-image.jpg" class="rounded-circle mr-3" width="50"
                                height="50" alt="Attendees Icon" />
                            <div>
                                <h6 class="font-weight-bold mb-1">Total Attendees</h6>
                                <div class="text-muted">
                                    Attendees: <strong id="meeting-attendees"></strong>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h6 class="font-weight-bold mb-0">
                                Internal Attendees
                            </h6>
                        </div>
                        <div class="card-body p-0" id="internal-attendees"></div>
                    </div>

                    <div class="card">
                        <div class="card-header">
                            <h6 class="font-weight-bold mb-0">
                                External Attendees
                            </h6>
                        </div>
                        <div class="card-body p-0" id="external-attendees"></div>
                    </div>

                    <div class="col-12">
                        <div class="fixed-bottom bg-white p-3 shadow" style="z-index: 1000;">
                            <div class="d-flex justify-content-between">
                                <button class="btn btn-danger flex-fill mr-2 py-3" id="cancel-meeting">
                                    Cancel Meeting
                                </button>
                                <button class="btn btn-warning flex-fill py-3" data-toggle="modal"
                                    data-target="#rescheduleModal">
                                    Reschedule
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</div>


@section Modals
{
    <!-- modal attendees -->
    <div class="modal fade" id="attendeeModal" tabindex="-1" aria-labelledby="attendeeModalLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="attendeeModalLabel">Manage Attendee</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p><strong>Name:</strong> <span id="attendeeName"></span></p>
                    <p><strong>Role:</strong> <span id="attendeeRole"></span></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Make Host</button>
                    <button type="button" class="btn btn-danger">
                        Remove Attendee
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- modal reschedule -->
    <div class="modal fade" id="rescheduleModal" tabindex="-1" aria-labelledby="rescheduleModalLabel">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="rescheduleModalLabel">
                        Reschedule Meeting
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="rescheduleForm">
                        <div class="form-group">
                            <label for="newDate">New Date:</label>
                            <input type="date" class="form-control" id="newDate" required />
                        </div>
                        <div class="form-group">
                            <label for="newStartTime">Start Time:</label>
                            <input type="time" class="form-control" id="newStartTime" required />
                        </div>
                        <div class="form-group">
                            <label for="newEndTime">End Time:</label>
                            <input type="time" class="form-control" id="newEndTime" required />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        Cancel
                    </button>
                    <button type="button" class="btn btn-primary" id="saveReschedule">
                        Save Changes
                    </button>
                </div>
            </div>
        </div>
    </div>


}

@section Scripts
{

    <script>
        const ajax = {
            url: {
                get_datatable_booking: "@Model.GetDataTables",

            }
        };

    </script>
    <!-- Page Specific JS File -->
    <script src="~/assets/webview/js/page/booking/index.js"></script>

}