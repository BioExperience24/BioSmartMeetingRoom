<div id="meeting-details-section" style="display: none">
    <div class="card position-relative">
        <button
            type="button"
            class="btn btn-danger btn-icon position-absolute"
            style="top: 10px; right: 10px; display: none;"
            id="end-meeting"
            onclick="endMeeting()"
        >
            <i class="fas fa-times"></i>
        </button>
        <div class="card-body">
            <h5 class="card-title mb-3">Detail Meeting</h5>
            <div
            class="section-header-breadcrumb d-flex align-items-center"
            >
            <div class="breadcrumb-item">Dashboard</div>
            <div class="breadcrumb-item active">
                <a href="#">Detail Meeting</a>
            </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <img
                    src="~/assets/images/no-image2.jpg"
                    class="rounded-circle mr-3"
                    width="50"
                    height="50"
                    alt="Meeting Icon"
                    />
                    <div>
                        <h6
                            class="font-weight-bold mb-1"
                            id="meeting-title"
                        ></h6>
                        <span id="meeting-status" class="badge p-2"></span>
                        <div
                            class="mt-1 text-muted"
                            id="meeting-date-time"
                        ></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card">
            <div class="card-body d-flex align-items-center">
                <img
                src="~/assets/images/no-image2.jpg"
                class="rounded-circle mr-3"
                width="50"
                height="50"
                alt="Host Icon"
                />
                <div>
                <h6 class="font-weight-bold mb-1">Detail Meeting</h6>
                <p class="text-muted mb-1">
                    Host: <strong id="meeting-host"></strong>
                </p>
                <p class="mb-0" id="meeting-description"></p>
                </div>
            </div>
            </div>
        </div>

        <div class="container mt-3">
            <div class="card mb-3">
            <div class="card-body d-flex align-items-center">
                <img
                src="~/assets/images/no-image2.jpg"
                class="rounded-circle mr-3"
                width="50"
                height="50"
                alt="Attendees Icon"
                />
                <div>
                <h6 class="font-weight-bold mb-1">Total Attendees</h6>
                <div class="text-muted">
                    Attendees: <strong id="meeting-attendees"></strong>
                </div>
                </div>
            </div>
            </div>

            <div class="card">
                <div class="card-header">
                <h6 class="font-weight-bold mb-0">
                    Internal Attendees
                </h6>
                </div>
                <div class="card-body p-0" id="internal-attendees"></div>
            </div>

            <div class="card">
                <div class="card-header">
                <h6 class="font-weight-bold mb-0">
                    External Attendees
                </h6>
                </div>
                <div class="card-body p-0" id="external-attendees"></div>
            </div>

            <div class="col-12">
                <div id="section-button" class="fixed-bottom bg-white p-3 shadow" style="z-index: 1000; display: none;">
                    <div class="d-flex justify-content-between">
                        @* <button class="btn btn-danger flex-fill mr-2 py-3" id="cancel-meeting" onclick="cancelMeeting()">
                            Cancel Meeting
                        </button>
                        <button class="btn btn-warning flex-fill py-3" data-toggle="modal" data-target="#rescheduleModal">
                            Reschedule
                        </button> *@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>